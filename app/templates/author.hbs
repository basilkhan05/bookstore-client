<h3>{{model.name}}</h3>

<strong>Biography</strong>: 
{{#if model.biography}}
  {{model.biography}}
{{else}}
  <em>Biography not available</em>
{{/if}}

<h4>Published titles:</h4>
<ul>
  {{#each model.books as |book|}}
    {{book-cover book=book blurBackground=(route-action "blurBackground")}}
  {{/each}}
</ul>
